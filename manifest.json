{
    "manifest_version": 3,
    
    "name": "WillBrownsberger.com Filter",
    "version": "0.2.0",
    "description": "Filter out certain commenters on Will Brownsberger's web site",
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["https://willbrownsberger.com/*"]
    }],

    "options_page": "options.html",

    "permissions": [
        "storage"
    ]
}
